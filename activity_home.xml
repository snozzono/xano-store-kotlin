<?xml version="1.0" encoding="utf-8"?>
<!--
  Layout de la Activity secundaria (Home).
  Muestra un saludo y un contenedor de fragmentos con BottomNavigationView.
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_200"
        android:padding="16dp"
        android:text="Bienvenido a nuestra App"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#360DC3"
        android:textColorHighlight="@color/purple_700" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/teal_200" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_nav_menu" />

</LinearLayout>