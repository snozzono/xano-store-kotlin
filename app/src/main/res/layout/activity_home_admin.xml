<?xml version="1.0" encoding="utf-8"?>
<!--
  Layout principal para HomeAdminActivity usando un DrawerLayout.
  - Incluye una Toolbar para el título y el ícono del menú.
  - Un FrameLayout para cargar los fragmentos.
  - Un BottomNavigationView para la navegación principal.
  - Un NavigationView para el menú lateral (sidebar).
-->
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_admin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.admin.HomeAdminActivity"
    tools:openDrawer="start">

    <!-- Contenido principal de la pantalla -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar para mostrar el título y el botón del menú -->
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBarAdmin"
                style="@style/Widget.MaterialComponents.Toolbar.Primary"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="Perfil"
                app:navigationIcon="@drawable/ic_menu" />

        </com.google.android.material.appbar.AppBarLayout>

        <!-- Contenedor donde se cargarán los fragmentos -->
        <FrameLayout
            android:id="@+id/fragment_container_admin"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Navegación inferior con dos opciones -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/bottom_nav_admin_menu" /> <!-- Menú específico para admin -->

    </LinearLayout>

    <!-- Menú lateral (Sidebar) -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view_admin"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_admin_menu" />
     <!-- Opcional: Cabecera para el sidebar -->
 <!-- Menú de opciones del sidebar -->

</androidx.drawerlayout.widget.DrawerLayout>
